<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="128dp"
                android:layout_height="71dp"
                app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="276dp"
                android:layout_height="71dp"

                android:gravity="center"
                android:text="Perimeter Calculator"
                android:textColor="@color/black"
                android:textSize="12pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="159dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">

                <ImageButton

                    android:id="@+id/imageButton1"
                    android:contentDescription="@string/app_name"
                    android:layout_width="137dp"
                    android:layout_height="114dp"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/screen_background_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perimeter of Square"
                    android:textColor="@color/black"
                    android:textSize="18sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="159dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/icons8_polygon_96" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:text="Perimeter of Parallelogram"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="127dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    app:srcCompat="@drawable/images" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perimeter of Rectangle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="153dp"
                android:layout_height="133dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/imageButton4"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    app:srcCompat="@drawable/icons8_rhombus_48" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perimeter of  Rhombus"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="137dp"
                android:layout_height="138dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/icons8_trapezoid_48" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perimeter of trapezoid"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="143dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    app:srcCompat="@drawable/icons8_triangle_48" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perimeter of triangle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="10dp"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:contentDescription="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icons8_circle_50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Circumference of Circle"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>